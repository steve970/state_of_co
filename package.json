{
  "name": "state_of_co",
  "version": "2.0.0",
  "description": "State Of Colorado - Modern D3.js Visualization",
  "main": "src/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/styles/*.css --dir public/styles",
    "build:js": "esbuild src/client/*.js --bundle --outdir=public/scripts --format=esm",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "update-bls": "node scripts/update-bls-data.js",
    "update-utah-bls": "node scripts/update-utah-bls-data.js",
    "test-bls": "echo 'Visit http://localhost:PORT/counties-bls to test BLS integration'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/steve970/state_of_co.git"
  },
  "keywords": [
    "CO",
    "Colorado",
    "D3.js",
    "visualization",
    "maps"
  ],
  "author": "Steve Hirschhorn",
  "license": "ISC",
  "homepage": "https://steve970.github.io",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.9",
    "express": "^4.19.2",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.25.11",
    "eslint": "^8.57.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1"
  }
}
